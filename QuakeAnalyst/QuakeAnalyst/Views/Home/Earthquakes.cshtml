@using QuakeAnalyst.Repo;
@Model = EarthquakesModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Earthquakes page";
}

<form action="./Earthquakes" method="get">
    <label for="fromDay">From:</label>
    <input type="date" id="fromDay" name="fromDay">
    <label for="toDay">To:</label>
    <input type="date" id="toDay" name="toDay">
    <input type="submit">
</form>


<table>
    <caption>Here is the earthquakse:</caption>
    <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Magnitute</th>
        <th>Depth</th>
    </tr>
    @foreach (Earthquake quake in Model.Earthquakes)
    {
        <tr>
            <td>@quake.Title</td>
            <td>@quake.Date</td>
            <td>@quake.Magnitude</td>
            <td>@quake.Depth</td>
        </tr>
    }
</table>